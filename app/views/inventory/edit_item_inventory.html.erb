<h1>Edit Item Inventory</h1>
<%= form_with url: update_item_inventory_path, data: {turbo: false} do |f| %>
  <%= f.hidden_field :lock_version,:value => @market.item.lock_version%>
  <div>
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', :disabled => true, :value => @market.item.name %>
  </div>
  <div>
    <%= f.label :category, class: 'form-label' %>
    <%= f.text_field :category, class: 'form-control', :disabled => true, :value => @market.item.category %>
  </div>
  <div>
    <%= f.label :price, class: 'form-label' %>
    <%= f.number_field :price, class: 'form-control', :required => true, :value => @market.price %>
  </div>
  <div>
    <%= f.label :stock, class: 'form-label' %>
    <%= f.number_field :stock, class: 'form-control', :required => true, :value => @market.stock %>
  </div>
  <%= f.hidden_field :market_id, :value => @market.id %>
  <br/>
  <%= f.submit :Save, class: 'btn btn-success' %>
<% end %>
