<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= item.category %>
  </p>
  <p>
    <strong>Image:</stong>
    <% begin %>
            <%= image_tag rails_blob_path(ivt.item.image.variant(:thumb), disposition: "attachment"), class: 'rounded' %>
            <% rescue %>
            <%= "No image" %>
     <% end %>
  </p>
  <p>
    <strong>Enable:</strong>
    <%= item.enable %>
  </p>
</div>
