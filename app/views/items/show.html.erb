<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<%= render @item %>

<div>
  <%= link_to "Edit this item", edit_item_path(@item) %> |
  <%= link_to "Back to items", items_path %>

  <%= button_to "Destroy this item", @item, method: :delete, class: "btn btn-danger" %>
</div>
